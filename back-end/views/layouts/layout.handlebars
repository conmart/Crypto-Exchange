<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Crypto-Exchange</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel='stylesheet' href='/css/style.css' />

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <!-- <script src="/scripts/app.js"></script> -->

  </head>
  <body>
    <!-- Render error and success messages -->
    {{#if success_msg}}
      <div class="col s4 card-panel green lighten-4 green-text text-darken-4">{{success_msg}}</div>
    {{/if}}
    {{#if error_msg}}
      <div class="col s4 card-panel red lighten-4 red-text text-darken-4">{{error_msg}}</div>
    {{/if}}
    {{#if error}}
      <div class="col s4 card-panel red lighten-4 red-text text-darken-4">{{error}}</div>
    {{/if}}

    {{#if user}}
      <div> User is logged in </div>
    {{/if}}

    {{{body}}}
  </body>
</html>
